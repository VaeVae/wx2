/* pages/todos/index.wxss */
.container{
  border-top: 1rpx solid #e0e0e0;
}

.search{
  display: flex;
  align-items: center;
  padding:20rpx;
  margin:20rpx;
  border-radius: 5rpx;
  box-shadow: 0 0 5rpx #e0e0e0;
  border:1rpx solid #e0e0e0;
}
.search image{
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}
.todos{
  margin:20rpx;
  border:1rpx solid #e0e0e0;
  border-radius: 5rpx;
  box-shadow: 0 0 5rpx #e0e0e0;
}
.todos .item{
  padding:20rpx;
  border-bottom: 1rpx solid #e0e0e0;
  display: flex;
  align-items: center;
}
.todos .item:last-child{
  border-bottom: 0;
}
.todos .item text{
  flex: 1;
  margin-left: 20rpx;
  font-size: 30rpx;
  color:#444;
}
.todos .item.completed text{
  color:#888;
  text-decoration: line-through;
}
.footer{
  font-size: 30rpx;
  margin:20rpx;
  display: flex;
  justify-content: space-between;
  color: #333;
}